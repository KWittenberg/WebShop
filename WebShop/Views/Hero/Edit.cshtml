@model WebShop.Models.ViewModel.HeroViewModel
@{
    ViewData["Title"] = "Edit Hero";
}
<!-- Edit Hero -->
<br />
<div class="container mt-5" align="center">
    <div class="login-form"><h2>Edit Hero</h2></div>
</div>
<form method="post" asp-action="Edit">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="Title" type="text" class="form-control mt-4" placeholder=" Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Subtitle" type="text" class="form-control mt-3" placeholder=" Subtitle">
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Description" type="text" rows="7" class="form-control mt-3" placeholder=" Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Align" type="text" class="form-control mt-3" placeholder=" Align">
                    <span asp-validation-for="Align" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-form">
                    <div class="form-group">
                        <input asp-for="ImageUrl" type="text" class="form-control mt-4" placeholder=" ImageUrl">
                    </div>
                    <div class="form-group text-center">
                        <img id="ImagePreview" class="border-info rounded mt-4" style="max-width: 350px" />
                    </div>
                    <div class="form-group">
                        <input asp-for="ProductUrl" type="text" class="form-control mt-3" placeholder=" ProductUrl">
                        <span asp-validation-for="ProductUrl" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group mt-3" align="center">
                                <label asp-for="ColorTitle" class="form-label">Color Title</label>
                                <input asp-for="ColorTitle" name="ColorTitle" type="color" class="form-control form-control-color" id="ColorTitle" title="Choose your color for Title">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mt-3" align="center">
                                <label asp-for="ColorDescription" class="form-label">Color Description</label>
                                <input asp-for="ColorDescription" name="ColorDescription" type="color" class="form-control form-control-color" id="ColorDescription" title="Choose your color for Description">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="EventName" type="text" class="form-control mt-4" placeholder=" Event Name">
                    <span asp-validation-for="EventName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="EventText" type="text" class="form-control mt-3" placeholder=" Event Text">
                    <span asp-validation-for="EventText" class="text-danger"></span>
                </div>
                <input asp-for="Publish" type="text" name="Publish" value="@Model.Publish" hidden>
            </div>
        </div>
    </div>
    <div class="container" align="right">
        <button type="submit" class="mt-3 mb-5 primary-btn">Edit</button><a asp-controller="Hero" asp-action="Index" class="mt-3 mb-5 secondary-btn">Back</a>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagePreview');
            output.src = $("#ImageUrl").val();
        })

        $("#ImageUrl").on("change", function () {
            var output = document.getElementById('ImagePreview');
            output.src = $(this).val();
        })
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}