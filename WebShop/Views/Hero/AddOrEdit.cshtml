@model WebShop.Models.ViewModel.HeroViewModel
@{
    Layout = "_LayoutADMIN";
    var title = "New Hero";
    //ViewData["PageTitle"] = Model.Id == 0 ? "New Hero" : "Edit Hero";

    @if (Model.Id != 0)
    {
        title = "Edit Hero";
    }
}

<!-- Hero AddOrEdit -->
<!-- BEGIN breadcrumb -->
<ol class="breadcrumb float-xl-end">
    <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Home</a></li>
    <li class="breadcrumb-item"><a href="~/Hero">Hero</a></li>
    <li class="breadcrumb-item active">Add Or Edit</li>
</ol>
<!-- END breadcrumb -->
<!-- BEGIN page-header -->
<h1 class="page-header">Hero @*<small>header small text goes here...</small>*@</h1>
<!-- END page-header -->
<!-- BEGIN col-6 -->
<div class="mt-5 col-xl-6 offset-xl-3">
    <!-- BEGIN panel -->
    <div class="panel panel-inverse" data-sortable-id="form-stuff-3">
        <!-- BEGIN panel-heading -->
        <div class="panel-heading">
            <h4 class="panel-title">@title <span class="badge bg-success ms-1">NEW</span></h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <!-- END panel-heading -->
        <!-- BEGIN panel-body -->
        <form method="post" asp-action="AddOrEdit">
            <div class="panel-body">
                <div class="mt-4">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="Title" type="text" class="form-control fs-15px" id="floatingInput" placeholder="Category">
                        <label for="floatingInput" class="d-flex align-items-center fs-13px">Category</label>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="Description" type="text" class="form-control fs-15px" id="floatingInput" placeholder="Description">
                        <label for="floatingInput" class="d-flex align-items-center fs-13px">Description</label>
                    </div>
                </div>
                
                
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <input asp-for="Title" type="text" class="form-control mt-4" placeholder=" Title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Subtitle" type="text" class="form-control mt-3" placeholder=" Subtitle">
                                <span asp-validation-for="Subtitle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <textarea asp-for="Description" type="text" rows="7" class="form-control mt-3" placeholder=" Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Align" type="text" class="form-control mt-3" placeholder=" Align">
                                <span asp-validation-for="Align" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="contact-form">
                                <div class="form-group">
                                    <input asp-for="ImageUrl" type="text" class="form-control mt-4" placeholder=" ImageUrl">
                                </div>
                                <div class="form-group text-center">
                                    <img id="ImagePreview" class="border-info rounded mt-4" style="max-width: 350px" />
                                </div>
                                <div class="form-group">
                                    <input asp-for="ProductUrl" type="text" class="form-control mt-3" placeholder=" ProductUrl">
                                    <span asp-validation-for="ProductUrl" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group mt-3" align="center">
                                            <label asp-for="ColorTitle" class="form-label">Color Title</label>
                                            <input asp-for="ColorTitle" name="ColorTitle" type="color" class="form-control form-control-color" id="ColorTitle" value="#000000" title="Choose your color for Title">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group mt-3" align="center">
                                            <label asp-for="ColorDescription" class="form-label">Color Description</label>
                                            <input asp-for="ColorDescription" name="ColorDescription" type="color" class="form-control form-control-color" id="ColorDescription" value="#000000" title="Choose your color for Description">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <input asp-for="EventName" type="text" class="form-control mt-4" placeholder=" Event Name">
                                <span asp-validation-for="EventName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="EventText" type="text" class="form-control mt-3" placeholder=" Event Text">
                                <span asp-validation-for="EventText" class="text-danger"></span>
                            </div>
                            <input asp-for="Publish" type="text" name="Publish" value="True" hidden>
                        </div>
                    </div>
                </div>
                
                
                <!-- Create & Update -->
                <div align="right" class="mt-3">
                    @if (Model.Id != 0)
                    {
                    //update
                        <input type="submit" class="btn btn-primary" value="Update" />
                    }
                    else
                    {
                    //create
                        <input type="submit" class="btn btn-primary" value="Create" />
                    }
                    <a asp-controller="Hero" asp-action="Index" class="btn btn-default active">Back</a>
                </div>
            </div>
        </form>
    </div>
    <!-- END panel -->
</div>
<!-- END col-6 -->