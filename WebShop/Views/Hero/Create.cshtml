@model WebShop.Models.Binding.HeroBinding
@{
    ViewData["Title"] = "New Hero";
    Layout = "_LayoutADMIN";
    //var title = "Create a new category";
    //ViewData["PageTitle"] = Model.Id == 0 ? "Create a new category" : "Edit category";

    //@if (Model.Id != 0)
    //{
    //    title = "Edit Category";
    //}
}
<!-- New Hero -->
<div class="d-flex align-items-center mb-3">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Hero">Hero</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
        <h1 class="page-header mb-0">Hero <small>Create</small></h1>
    </div>
</div>
<div class="mt-5 col-xl-12">
    <!-- BEGIN panel -->
    <div class="panel panel-inverse" data-sortable-id="form-stuff-3">
        <!-- BEGIN panel-heading -->
        <div class="panel-heading">
            <h4 class="panel-title">Hero <span class="badge bg-success ms-1">NEW</span></h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <!-- END panel-heading -->
        <!-- BEGIN panel-body -->
        <form method="post" asp-action="Create">
            <div class="panel-body">


                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-floating mt-4 mb-3 mb-md-0">
                            <input asp-for="Title" type="text" class="form-control fs-15px" id="floatingInput" placeholder=" Title">
                            <label for="floatingInput" class="d-flex align-items-center fs-13px"> Title</label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-3 mb-3 mb-md-0">
                            <input asp-for="Subtitle" type="text" class="form-control fs-15px" id="floatingInput" placeholder=" Subtitle">
                            <label for="floatingInput" class="d-flex align-items-center fs-13px"> Subtitle</label>
                            <span asp-validation-for="Subtitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Description" type="text" rows="10" class="form-control mt-3" placeholder=" Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-3 mb-3 mb-md-0">
                            <input asp-for="Align" type="text" class="form-control fs-15px" id="floatingInput" placeholder=" Align">
                            <label for="floatingInput" class="d-flex align-items-center fs-13px"> Align</label>
                            <span asp-validation-for="Align" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="contact-form">
                            <div class="form-group">
                                <input asp-for="ImageUrl" type="text" class="form-control mt-4" placeholder=" ImageUrl">
                            </div>
                            <div class="form-group text-center">
                                <img id="ImagePreview" class="border-info rounded mt-4" style="max-width: 350px" />
                            </div>
                            <div class="form-floating mt-3 mb-3 mb-md-0">
                                <input asp-for="ProductUrl" type="text" class="form-control fs-15px" id="floatingInput" placeholder=" ProductUrl">
                                <label for="floatingInput" class="d-flex align-items-center fs-13px"> ProductUrl</label>
                                <span asp-validation-for="ProductUrl" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group mt-3" align="center">
                                        <label asp-for="ColorTitle" class="form-label">Color Title</label>
                                        <input asp-for="ColorTitle" name="ColorTitle" type="color" class="form-control form-control-color" id="ColorTitle" title="Choose your color for Title">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group mt-3" align="center">
                                        <label asp-for="ColorDescription" class="form-label">Color Description</label>
                                        <input asp-for="ColorDescription" name="ColorDescription" type="color" class="form-control form-control-color" id="ColorDescription" title="Choose your color for Description">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-floating mt-4 mb-3 mb-md-0">
                            <input asp-for="EventName" type="text" class="form-control fs-15px" id="floatingInput" placeholder=" EventName">
                            <label for="floatingInput" class="d-flex align-items-center fs-13px"> EventName</label>
                            <span asp-validation-for="EventName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-3 mb-3 mb-md-0">
                            <input asp-for="EventText" type="text" class="form-control fs-15px" id="floatingInput" placeholder=" EventText">
                            <label for="floatingInput" class="d-flex align-items-center fs-13px"> EventText</label>
                            <span asp-validation-for="EventText" class="text-danger"></span>
                        </div>
                        <input asp-for="Publish" type="text" name="Publish" value="True" hidden>
                    </div>
                </div>
                <div align="right" class="mt-3">
                    <input type="submit" class="btn btn-primary" value="Create" /><a asp-controller="Hero" asp-action="Index" class="btn btn-default active">Back</a>
                </div>
            </div>
        </form>
    </div>
    <!-- END panel -->
</div>
<!-- END col-6 -->
