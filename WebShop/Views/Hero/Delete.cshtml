@model WebShop.Models.ViewModel.HeroViewModel
@{
    ViewData["Title"] = "Delete Hero";
}
<!-- Delete Hero -->
<br />
<div class="container mt-5" align="center">
    <div class="login-form"><h2>Delete Hero</h2></div>
</div>
<form method="post" asp-action="Delete">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="Title" disabled type="text" class="form-control mt-4" placeholder=" Title">
                </div>
                <div class="form-group">
                    <input asp-for="Subtitle" disabled type="text" class="form-control mt-3" placeholder=" Subtitle">
                </div>
                <div class="form-group">
                    <textarea asp-for="Description" disabled type="text" rows="7" class="form-control mt-3" placeholder=" Description"></textarea>
                </div>
                <div class="form-group">
                    <input asp-for="Align" disabled type="text" class="form-control mt-3" placeholder=" Align">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-form">
                    <div class="form-group">
                        <input asp-for="ImageUrl" disabled type="text" class="form-control mt-4" placeholder=" ImageUrl">
                    </div>
                    <div class="form-group text-center">
                        <img id="ImagePreview" class="border-info rounded mt-4" style="max-width: 350px" />
                    </div>
                    <div class="form-group">
                        <input asp-for="ProductUrl" disabled type="text" class="form-control mt-3" placeholder=" ProductUrl">
                </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group mt-3" align="center">
                                <label asp-for="ColorTitle" class="form-label">Color Title</label>
                                <input asp-for="ColorTitle" disabled name="ColorTitle" type="color" class="form-control form-control-color" id="ColorTitle" title="Choose your color for Title">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mt-3" align="center">
                                <label asp-for="ColorDescription" class="form-label">Color Description</label>
                                <input asp-for="ColorDescription" disabled name="ColorDescription" type="color" class="form-control form-control-color" id="ColorDescription" title="Choose your color for Description">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="EventName" disabled type="text" class="form-control mt-4" placeholder=" Event Name">
                </div>
                <div class="form-group">
                    <input asp-for="EventText" disabled type="text" class="form-control mt-3" placeholder=" Event Text">
                </div>
                <input asp-for="Publish" type="text" name="Publish" value="@Model.Publish" hidden>
            </div>
        </div>
    </div>
    <div class="container" align="right">
        <button type="submit" class="mt-3 mb-5 primary-btn">Delete</button><a asp-controller="Hero" asp-action="Index" class="mt-3 mb-5 secondary-btn">Back</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }