@model List<WebShop.Models.ViewModel.ProductViewModel>
@{
    ViewData["Title"] = "Product";
    Layout = "_LayoutADMIN";
    int counter = 1;
}

<!-- Product -->
<div class="d-flex align-items-center mb-3">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Product</li>
        </ol>
        <h1 class="page-header mb-0">Product</h1>
    </div>
    <div class="ms-auto">
        <a asp-controller="Admin" asp-action="Create" class="btn btn-success btn-rounded px-4 rounded-pill"><i class="fa fa-plus fa-lg me-2 ms-n2 text-success-900"></i> Add New</a>
    </div>
</div>
<div class="mt-5 col-xl-12">
    <!-- BEGIN panel -->
    <div class="panel panel-inverse" data-sortable-id="table-basic-7">
        <div class="panel-heading">
            <h4 class="panel-title">Product <span class="badge bg-success ms-5px">PRO</span></h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <!-- BEGIN panel-body -->
        <div class="panel-body">
            <!-- BEGIN table-responsive -->
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead>
                    <tr>
                        <th style="width: 2%">#</th>
                        <th style="width: 10%">Image</th>
                        <th style="width: 15%">Title</th>
                        <th style="width: 15%">Description</th>
                        <th style="width: 15%">Gallery</th>
                        <th>Available</th>
                        <th>Quantity</th>
                        <th>Discount</th>
                        <th>Price</th>
                        <th style="width: 11%"><a asp-controller="Admin" asp-action="Create" class="btn btn-block btn-secondary btn-sm"><i class="bi bi-plus-circle"></i> Add New</a></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        string redirectUrlAvailable = Url.Action("ChangeAvailableStatus", "Admin", new { id = item.Id, status = !item.Available });
                        string redirectUrlDiscount = Url.Action("ChangeDiscountStatus", "Admin", new { id = item.Id, status = !item.Discount });

                        <tr>
                            <td>@counter</td>
                            <td><a href="@item.Image" class="popupImg"><img src="@item.Image" width="150" /></a></td>
                            <td><b>@item.Title</b></td>
                            <td>@item.ShortDescription</td>
                            <td>
                                @foreach (var gallery in item.ProductImages)
                                {
                                    <div class="card" style="width: 5rem;">
                                        <img class="card-img-top" src="@gallery.ImageUrl" alt="@gallery.Name" />
                                        <div class="card-img-overlay">
                                                <button class="deleteBtn btn btn-secondary btn-sm" type="button" data-id="@item.Id"><i class="bi bi-trash"></i></button>
                                            @*<form asp-controller="ProductImages" asp-action="Delete" asp-route-id="@item.Id"><button type="submit" class="btn btn-secondary btn-sm" onclick="return confirm('Are you sure to delete this record?')"><i class="bi bi-trash"></i></button></form>*@
                                            @*<a class="card-title" asp-controller="ProductImages" asp-action="Delete" asp-route-id="@item.Id" align="right"><i class="bi bi-trash"></i></a>*@
                                        </div>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (item.Available)
                                {
                                    <input type="checkbox" onclick="RedirectToUrl('@redirectUrlAvailable')" checked>
                                }
                                else
                                {
                                    <input type="checkbox" onclick="RedirectToUrl('@redirectUrlAvailable')">
                                }
                            </td>
                            <td>@item.Quantity</td>
                            <td>
                                @if (item.Discount)
                                {
                                    <input type="checkbox" onclick="RedirectToUrl('@redirectUrlDiscount')" checked>
                                }
                                else
                                {
                                    <input type="checkbox" onclick="RedirectToUrl('@redirectUrlDiscount')">
                                }
                            </td>
                            <td>
                                @if (item.Discount == true)
                                {
                                    <div><b style="color:white">@item.DiscountPrice</b><sub><s> @item.Price</s></sub></div>
                                }
                                else
                                {
                                    <div><b style="color:white">@item.Price</b></div>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Admin" asp-action="DetailsProduct" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-eye"></i></a>
                                    <a asp-controller="ProductImages" asp-action="Create" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="fa-solid fa-image"></i></a>
                                    <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<form id="deleteForm" asp-controller="ProductImages" asp-action="Delete"><input type="hidden" id="leaveTypeId" name="Id" /></form>