@model WebShop.Models.ViewModel.ApplicationUserViewModel
@inject IApplicationUserService userService
@{
    ViewData["Title"] = "Delete";
    var userRoles = await userService.GetRolesAsync();
}
<!-- Create -->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="login-form mt-5" align="center"><h2>Delete</h2></div>
            <form method="post" asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label">&nbsp; &nbsp; Choose a role</label>
                        <select name="RoleId" disabled class="form-select" aria-label="Default select example">
                            @foreach (var item in userRoles)
                            {
                                if (item.Id == Model.Id)
                                {
                                    <option selected value="@item.Id">@item.Id</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Id</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input asp-for="FirstName" type="text" disabled class="form-control mt-3">
                    </div>
                    <div class="form-group">
                        <input asp-for="LastName" type="text" disabled class="form-control mt-3">
                    </div>
                    <div class="form-group">
                        <input asp-for="PhoneNumber" type="text" disabled class="form-control mt-3">
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="text" disabled class="form-control mt-3">
                    </div>
                    <div class="form-group">
                        <input asp-for="DOB" type="date" disabled class="form-control mt-3">
                    </div>
                </div>
                <div align="right">
                    <button type="submit" class="mt-3 primary-btn">Delete</button><a asp-controller="ApplicationUser" asp-action="Index" class="mt-3 secondary-btn">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>