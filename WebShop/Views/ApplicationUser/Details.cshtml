@model WebShop.Models.ViewModel.ApplicationUserViewModel
@inject ICustomerService customerService
@inject IApplicationUserService userService
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "ApplicationUser";

    //var addresses = await customerService.GetAddresses(@Model.Id);
    int counter = 1;
}
<br />
<br />
<!-- Details ApplicationUser -->
<div class="container mt-5" align="center">
    <div class="card text-bg-light mb-3" style="max-width: 30rem;">
        <div class="card-header" align="left" style="color: #DFAD51; background-color: #3A3F44">
            <div class="row"><h4 class="col" align="left" style="color: #DFAD51">@Model.FirstName @Model.LastName.ToUpper()</h4><h5 class="col" align="right"><a type="button" class="btn-close float-end" asp-controller="ApplicationUser" asp-action="Index"></a></h5></div>
        </div>
        <div class="card-body" style="background-color: #272B30">
            <h3 style="color:white">@Model.Role</h3>
            <h5 style="color:darkgrey">@Model.Id</h5>
            <hr />
            <div class="row"><h4 class="col" align="left">Phone</h4><h4 class="col" align="right">@Model.PhoneNumber</h4></div>
            <hr />
            <div class="row"><h5 class="col" align="left">Email</h5><h5 class="col" align="right">@Model.Email</h5></div>
            <hr />
            <div class="row"><h5 class="col" align="left">Date Of Birth</h5><h5 class="col" align="right">@Model.DOB</h5></div>
        </div>
        <div class="card-footer">
            <div class="row"><h5 class="col" align="left">Created</h5><h5 class="col" align="right">@Model.Created.ToShortDateString()</h5></div>
        </div>
    </div>
</div>


<!-- Address -->
<div class="container mt-5">
    <main role="main" class="pb-3">
        <h2 align="left">Addresses</h2>
        <div class="card-body mt-3 p-0">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 20%">User</th>
                        <th>Primary</th>
                        <th>Street</th>
                        <th>City</th>
                        <th>PostCode</th>
                        <th>Country</th>
                        <th style="width: 11%"><a asp-controller="Address" asp-action="Create" class="btn btn-block btn-secondary btn-sm"><i class="bi bi-plus-circle"></i> Add New</a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Address)
                    {
                        string redirectUrlPrimary = Url.Action("ChangePrimaryStatus", "Address", new { id = item.Id, status = !item.Primary });
                        <tr>
                            <td>@counter</td>
                            <td>@item.ApplicationUser.FirstName @item.ApplicationUser.LastName</td>
                            <td>
                                @if (item.Primary)
                                {
                                    <input type="checkbox" onclick="RedirectToUrl('@redirectUrlPrimary')" checked>
                                }
                                else
                                {
                                    <input type="checkbox" onclick="RedirectToUrl('@redirectUrlPrimary')">
                                }
                            </td>
                            <td>@item.Street</td>
                            <td>@item.City</td>
                            <td>@item.PostCode</td>
                            <td>@item.Country</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Address" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-eye"></i></a>
                                    <a asp-controller="Address" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-controller="Address" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>

@await Html.PartialAsync("_CreateItem", "Address")

<script>
    function RedirectToUrl(url) {
        console.log(url);
        window.location.href = url;
    }
</script>
