@model WebShop.Models.ViewModel.ApplicationUserViewModel
@inject IApplicationUserService userService
@{
    ViewData["Title"] = "Create";
    var userRoles = await userService.GetApplicationUserRolesAsync();
}
<!-- Create -->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="login-form mt-5" align="center"><h2>Create</h2></div>
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label">&nbsp; &nbsp; Choose a role</label>
                        <select name="RoleId" class="form-select">
                            @foreach (var item in userRoles)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input asp-for="FirstName" type="text" class="form-control mt-3" placeholder=" First Name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="LastName" type="text" class="form-control mt-3" placeholder=" Last Name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="PhoneNumber" type="text" class="form-control mt-3" placeholder=" Phone Number">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="text" class="form-control mt-3" placeholder=" Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="text" class="form-control mt-3" placeholder=" Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DOB" class="control-label">&nbsp; &nbsp; Date Of Birth</label>
                        <input asp-for="DOB" type="date" class="form-control" placeholder=" Date Of Birth">
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
                <div align="right">
                    <button type="submit" class="mt-3 primary-btn">Create</button><a asp-controller="ApplicationUser" asp-action="Index" class="mt-3 secondary-btn">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }