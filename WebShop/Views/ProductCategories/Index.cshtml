@model IEnumerable<WebShop.Models.Dbo.ProductCategory>
@{
    ViewData["Title"] = "Category";
    int counter = 1;
}

<!-- Category -->
<div class="container mt-5">
    <main role="main" class="pb-3">
        <h1>Category</h1>
        <div class="card-body mt-3 p-0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 30%">Category</th>
                            <th>Description</th>
                            <th style="width: 12%"><a asp-controller="ProductCategories" asp-action="Create" class="btn btn-block btn-secondary btn-sm"><i class="bi bi-plus-circle"></i> &nbsp; Add New</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="ProductCategories" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-eye"></i></a>
                                        <a asp-controller="ProductCategories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-controller="ProductCategories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </main>
</div>
@await Html.PartialAsync("_CreateItem", "ProductCategories")