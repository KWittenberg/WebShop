@model WebShop.Models.Dbo.ProductCategory
@{
    ViewData["Title"] = "Delete Category";
}
<!-- Delete Category -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Delete Category</h2>
                </div>
                <form method="post" asp-action="Delete">
                    <div class="card-body">
                        <div class="form-group">
                            <input asp-for="Title" type="text" disabled class="form-control">
                         </div>
                        <div class="form-group">
                            <input asp-for="Description" type="text" disabled class="form-control mt-3">
                         </div>
                    </div>
                    <div align="right">
                        <button type="submit" class="mt-3 primary-btn">Delete</button><a asp-controller="ProductCategories" asp-action="Index" class="mt-3 secondary-btn">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>