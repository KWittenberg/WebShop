@model WebShop.Models.Dbo.ProductCategory
@{
    ViewData["Title"] = "New Category";
}

<!-- New Category -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>New Category</h2>
                </div>
                <form method="post" asp-action="Create">
                    <div class="card-body">
                        <div class="form-group">
                            <input asp-for="Title" type="text" class="form-control" placeholder=" Category">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Description" type="text" class="form-control mt-3" placeholder=" Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div align="right">
                        <button type="submit" class="mt-3 primary-btn">Create</button><a asp-controller="ProductCategories" asp-action="Index" class="mt-3 secondary-btn">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }