@model WebShop.Models.Dbo.ApplicationUser
@inject UserManager<ApplicationUser> UserManager
@inject ICustomerService customerService
@{
    ViewData["Title"] = "ApplicationUser";
    var user = await UserManager.GetUserAsync(User);
    var address = await customerService.GetAddress(user.Id);
    int counter = 1;
}

<h1>Details</h1>

<div>
    <h4>ApplicationUser</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @user.FirstName
        </dt>
        <dd class="col-sm-10">
            @user.LastName
        </dd>
        <dt class="col-sm-2">
            @user.Role
        </dt>
        <dd class="col-sm-10">
            @user.Email
        </dd>
        <dt class="col-sm-2">
            @user.DOB
        </dt>
        <dd class="col-sm-10">
            @user.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            @address.Street
            @address.City
            @address.PostCode
            @address.Country
        </dt>

    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
