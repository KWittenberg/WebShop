@model WebShop.Models.Binding.LoginUserBinding
@{
    ViewData["Title"] = "Login";
}

<!-- Login -->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="login-form mt-5" align="center"><h2>Login</h2></div>
            <form method="post" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <input asp-for="Email" type="text" class="form-control mt-3" placeholder=" Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="text" class="form-control mt-3" placeholder=" Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <p><a href="/User/Registration">REGISTRATION</a>&nbsp;&nbsp; If you do not have a profile created, now is the time to create one and get additional benefits!</p>
                <div align="right">
                    <button type="submit" class="mt-3 primary-btn">Login</button><a asp-controller="Home" asp-action="Index" class="mt-3 secondary-btn">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }