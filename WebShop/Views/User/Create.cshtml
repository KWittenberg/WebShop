@model WebShop.Models.Binding.AddressBinding
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "New Address";
    var user = await UserManager.GetUserAsync(User);
}

<!-- New Address -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>New Address</h2>
                </div>
                <form method="post" asp-action="Create">
                    <div class="card-body">
                        <input type="text" name="ApplicationUserId" value="@user.Id" hidden>
                        <div class="form-group">
                            <input asp-for="Street" type="text" class="form-control mt-3" placeholder=" ...enter the street and house number">
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="City" type="text" class="form-control mt-3" placeholder=" ...enter the city">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PostCode" type="text" class="form-control mt-3" placeholder=" ...enter the postal code">
                            <span asp-validation-for="PostCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Country" type="text" class="form-control mt-3" placeholder=" ...enter the country">
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div align="right">
                        <button type="submit" class="mt-3 primary-btn">Create</button><a asp-controller="User" asp-action="Index" asp-route-id="@user.Id" class="mt-3 secondary-btn">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }