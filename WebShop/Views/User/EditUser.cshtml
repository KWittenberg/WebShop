@using WebShop.Services.Interface;
@model WebShop.Models.ViewModel.ApplicationUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<!-- Edit User -->

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="login-form mt-5" align="center"><h2>Edit User</h2></div>
            <form method="post" asp-action="EditUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <input asp-for="FirstName" type="text" class="form-control mt-3" placeholder=" First Name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="LastName" type="text" class="form-control mt-3" placeholder=" Last Name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="PhoneNumber" type="text" class="form-control mt-3" placeholder=" Phone Number">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="text" class="form-control mt-3" placeholder=" Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                   @* <div class="form-group">
                        <input asp-for="Password" type="text" class="form-control mt-3" placeholder=" Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <input asp-for="DOB" type="date" class="form-control mt-3" placeholder=" Date Of Birth">
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>


                <div class="container" align="right">
                    <button type="submit" class="mt-3 mb-5 primary-btn">Update</button><a asp-controller="User" asp-action="Index" class="mt-3 mb-5 secondary-btn">Back</a>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
