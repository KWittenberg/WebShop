@using WebShop.Services.Interface;
@model WebShop.Models.ViewModel.AddressViewModel
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Delete Address";
    var user = await UserManager.GetUserAsync(User);
}

<!-- Delete Address -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Delete Address</h2>
                </div>
                <form method="post" asp-action="Delete">
                    <div class="card-body">
                        <input type="text" name="ApplicationUserId" value="@user.Id" hidden>
                        <div class="form-group">
                            <input asp-for="Street" type="text" disabled class="form-control mt-3">
                        </div>
                        <div class="form-group">
                            <input asp-for="City" type="text" disabled class="form-control mt-3">
                        </div>
                        <div class="form-group">
                            <input asp-for="PostCode" type="text" disabled class="form-control mt-3">
                        </div>
                        <div class="form-group">
                            <input asp-for="Country" type="text" disabled class="form-control mt-3">
                        </div>
                    </div>
                    <div align="right">
                        <button type="submit" class="mt-3 primary-btn">Delete</button><a asp-controller="User" asp-action="Index" asp-route-id="@user.Id" class="mt-3 secondary-btn">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>