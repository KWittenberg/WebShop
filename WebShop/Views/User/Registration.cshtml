@model WebShop.Models.Binding.UserBinding
@{
    ViewData["Title"] = "Register";
}
<!-- Registration -->
<div class="container mt-5">
    <div class="row">
        <div class="login-form mt-5" align="center"><h2>Registration</h2></div>
        <form method="post" asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col">
                    <div class="card-body">
                        <div class="form-group">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder=" First Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LastName" type="text" class="form-control mt-3" placeholder=" Last Name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" type="text" class="form-control mt-3" placeholder=" Phone Number">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" type="text" class="form-control mt-3" placeholder=" Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="text" class="form-control mt-3" placeholder=" Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DOB" class="control-label">&nbsp; &nbsp; Date Of Birth</label>
                            <input asp-for="DOB" type="date" class="form-control" placeholder=" Date Of Birth">
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card-body">
                        <div class="form-group">
                            <input asp-for="Street" type="text" class="form-control" placeholder=" Street And House Number">
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PostCode" type="text" class="form-control mt-3" placeholder=" Post Code">
                            <span asp-validation-for="PostCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="City" type="text" class="form-control mt-3" placeholder=" City">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Country" type="text" class="form-control mt-3" placeholder=" Country">
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div align="right">
                <button type="submit" class="mt-3 primary-btn">Register</button><a asp-controller="Home" asp-action="Index" class="mt-3 secondary-btn">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }