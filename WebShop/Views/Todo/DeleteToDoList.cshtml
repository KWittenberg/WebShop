@model WebShop.Models.ViewModel.ToDoListViewModel
@{
    ViewData["Title"] = "DeleteToDoList";
    Layout = "_LayoutADMIN";
}

<!-- Delete ToDo List -->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="login-form mt-5" align="center"><h2>Delete ToDoList</h2></div>
            <form method="post" asp-action="DeleteToDoList">
                <div class="card-body">
                    <div class="form-group">
                        <input asp-for="Title" type="text" disabled class="form-control mt-3">
                    </div>
                    <div class="form-group">
                        <input asp-for="Description" type="text" disabled class="form-control mt-3">
                    </div>
                </div>
                <div align="right">
                    <button type="submit" class="mt-3 btn btn-primary">Delete</button><a asp-controller="ToDo" asp-action="Index" class="mt-3 btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>