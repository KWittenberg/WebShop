@using WebShop.Models.Dbo
@using Microsoft.AspNetCore.Identity
@using WebShop.Models.ViewModel
@model List<ProductViewModel>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "ListView";
    int counter = 1;
}

<!-- ListView -->
<div class="container mt-5">
    <main role="main" class="pb-3">
        <h1>ListView</h1>
        <div class="card-body mt-3 p-0">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 3%">#</th>
                        <th style="width: 10%">Image</th>
                        <th style="width: 15%">Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th style="width: 10%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td><a href="@item.Image" class="popupImg"><img src="@item.Image" /></a></td>
                            <td>@item.Title</td>
                            <td>@item.ShortDescription</td>
                            <td>@item.Price</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Shop" asp-action="ItemView" asp-route-id="@item.Id" class="btn btn-secondary">Buy Now</a>
                                    @*<a href="@Url.Action("ItemView", "Shop",new {id = item.Id})" class="btn btn-success">Detalji</a>*@
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>