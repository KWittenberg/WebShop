@model WebShop.Models.ViewModel.ShoppingCartViewModel
@using Microsoft.AspNetCore.Identity
@using WebShop.Models.Dbo
@using WebShop.Services.Interface
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ICustomerService customerService
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = await UserManager.GetUserAsync(User);
    var address = await customerService.GetAddress(user.Id);

    decimal subTotalPrice = 0;
    decimal totalPrice = 0;
    decimal totalPriceWithVat = 0;
    string documentId = string.Empty;

    if (Model != null)
    {
        subTotalPrice = Model.GetSubTotalPrice();
        totalPrice = Model.GetTotalPrice();
        //totalPriceWithVat = Model.GetTotalPriceWithVAT();
        documentId = Model.Id + "-" + Model.Created.ToString("dd-MM-yyyy");

    }

    int counter = 1;
    int counterAddress = 1;
}

@section Scripts{
    <script>
        function TrigerModal() {
            console.log("modal aktiviran!");
            $('#mojModal').modal('show');
        }
        function HideModal() {
            $('#mojModal').modal('hide');
        }
    </script>
}

    <div class="container">
        @if (Model != null)
    {
        @section modalSection{
        <div class="modal" id="mojModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header"><h5 class="modal-title">Storniranje</h5></div>
                    <div class="modal-body"><p>Stvarno obrisat?</p></div>

                    <div class="modal-footer">
                        @Html.ActionLink("Potvrdi", "SuspendShoppingCart", new {  id=Model.Id  },new {@class= "btn btn-danger"})
                        @*             <button type="button" class="btn btn-primary">Save changes</button>*@
                        <button type="button" class="btn btn-secondary" onclick="HideModal()">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }

        string documentStatus = Model.ShoppingCartStatus.ToString();




        <!-- Shopping Cart -->
        <div class="container mt-5">
            <main role="main" class="pb-3">
                <h1 align="left">Shopping Cart</h1>
            </main>
        </div>
        <div class="mt-3 card">
            <div class="card-header">
                <div class="row"><h5 class="col" align="left" style="color:white">@documentId - @user.FirstName @user.LastName</h5><h5 class="col" align="right">Status: <strong> @documentStatus</strong></h5></div>
            </div>
            <div class="card-body">
                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 3%" class="center">#</th>
                                <th style="width: 10%">Image</th>
                                <th style="width: 25%">Title</th>
                                <th class="center">Category</th>
                                <th class="right">Price</th>
                                <th class="right">Quantity</th>
                                <th class="right">Total</th>
                                <th style="width: 3%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ShoppingCartItems)
                            {
                                <tr>
                                    <td class="center">@counter</td>
                                    <td class="left"><img src="@item.Product.Image" width="100px"></td>
                                    <td class="left strong">@item.Product.Title</td>
                                    <td class="right">@item.Product.ProductCategory.Title</td>
                                    <td class="right">@item.Price</td>
                                    <td class="center">@item.Quantity</td>
                                    <td class="right">@((item.Quantity * item.Price).ToString("c"))</td>
                                    <td>
                                        <a asp-action="SuspendShoppingCartItem" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-trash"></i></a>
                                        @*@Html.ActionLink("X", "SuspendShoppingCartItem", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })*@
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>


                <div class="row">
                    <div class="col mt-3">
                        <h4 align="left">Shipping to:</h4>
                        <table class="mt-3 table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 5%">#</th>
                                    <th>Primary</th>
                                    <th>Street</th>
                                    <th>City</th>
                                    <th>PostCode</th>
                                    <th>Country</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ApplicationUser.Address)
                                {
                                    string redirectUrlPrimary = Url.Action("ChangePrimaryStatus", "Address", new { id = item.Id, status = !item.Primary });
                                    <tr>
                                        <td>@counterAddress</td>
                                        <td>
                                            @if (item.Primary)
                                            {
                                                <input type="checkbox" onclick="RedirectToUrl('@redirectUrlPrimary')" checked>
                                            }
                                            else
                                            {
                                                <input type="checkbox" onclick="RedirectToUrl('@redirectUrlPrimary')">
                                            }
                                        </td>
                                        <td>@item.Street</td>
                                        <td>@item.City</td>
                                        <td>@item.PostCode</td>
                                        <td>@item.Country</td>
                                    </tr>
                                    counterAddress++;
                                }
                            </tbody>
                        </table>

                        <div class="card-footer text-muted">
                            Estimate Arrival Date: @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                        </div>

                        @*<div class="col-md-10 offset-3">
                    <!-- Default radio -->
                    <div class="form-check">
                    <input class="form-radio-input" name="status" value="False" type="radio" asp-for="LocalPickup" />

                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault" value="false" />
                    <label class="form-check-label" for="flexRadioDefault"> Local Pickup </label>
                    </div>

                    <!-- Default checked radio -->
                    <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault" checked value="true" />
                    <label class="form-check-label" for="flexRadioDefault"> Croatia </label>
                    </div>
                    </div>*@

                        @*<div class="card">
                    <div class="card-header">SHIPPING DETAILS</div>
                    <div class="card-body text-center">
                    <h5 class="card-title">@user.FirstName @user.LastName</h5>
                    <p class="card-text">@user.PhoneNumber</p>
                    <p class="card-text">@address.Street</p>
                    <p class="card-text">@address.PostCode @address.City</p>
                    <p class="card-text">@address.Country</p>
                    </div>
                    <div class="card-footer text-muted">
                    Estimate Arrival Date: @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                    </div>
                    </div>*@


                    </div>
                    <div class="col">
                        <div class="col-md-10 offset-2">
                            <table class="table table-clear">
                                <tbody>
                                    <tr>
                                        <td class="left"><strong>Subtotal</strong></td>
                                        <td align="right">@string.Format("{0:C}",subTotalPrice)</td>
                                    </tr>

                                    @foreach (var item in Model.ApplicationUser.Address.Where(x=>x.Primary == true))
                                    {
                                        @if (item.Primary == true)
                                        {
                                            <tr>
                                                <td class="left">Shipping Croatia</td>
                                                <td align="right">55,00 kn</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td class="left">Local pickup</td>
                                                <td align="right">00,00 kn</td>
                                            </tr>
                                        }
                                    }

                                    <tr>
                                        <td class="left"><strong>Total</strong></td>
                                        <td align="right">
                                            <strong>@string.Format("{0:C}",totalPrice)</strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>


                        @*<button type="button" class="btn btn-danger" onclick="TrigerModal()">Storno</button>*@
                        @*@Html.ActionLink("Storno", "SuspendShoppingCart", new {  id=Model.Id  },new {@class= "btn btn-danger"})*@

                        <div class="mt-5 mb-5" align="right">

                            @if (Model != null)
                            {
                                using (Html.BeginForm())
                                {
                                    <input type="text" name="ShoppingCartId" value="@Model.Id" hidden>
                                    <a asp-controller="Shop" asp-action="Index" class="secondary-btn">Continue Shopping</a>
                                    <input type="submit" class="primary-btn" value="Buy Now">
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    else
    {
        <div class="card mt-5 col-md-6 offset-1">
            <h5 class="card-header">Shopping Cart</h5>
            <div class="card-body">
                <h5 class="card-title">Your shopping cart is empty!</h5>
                <p class="card-text">Check out our offer!</p>
                @Html.ActionLink("Go To Shop","Index","Shop",null,new {@class = "btn btn-primary"})

                @*       <a href="#" class="btn btn-primary">Go somewhere</a>*@
            </div>
        </div>
    }
</div>
<br />
<br />
<br />
<partial name="_Footer" />

<script>
    function RedirectToUrl(url) {
        console.log(url);
        window.location.href = url;
    }
</script>