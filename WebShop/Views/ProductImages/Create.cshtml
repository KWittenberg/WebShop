@model WebShop.Models.Binding.ProductImagesBinding
@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutADMIN";
}

<!-- New Product Image -->
<!-- BEGIN breadcrumb -->
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Home</a></li>
    <li class="breadcrumb-item"><a href="~/ProductCategories">ProductImage</a></li>
    <li class="breadcrumb-item active">New Product Image</li>
</ol>
<!-- END breadcrumb -->
<!-- BEGIN page-header -->
<h1 class="page-header">Product Image <small>@Model.ProductId</small></h1>
<!-- END page-header -->
<!-- BEGIN col-6 -->
<div class="mt-5 col-xl-6 offset-xl-3">
    <!-- BEGIN panel -->
    <div class="panel panel-inverse" data-sortable-id="form-stuff-3">
        <!-- BEGIN panel-heading -->
        <div class="panel-heading">
            <h4 class="panel-title">Product Image <span class="badge bg-success ms-1">NEW</span></h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <!-- END panel-heading -->
        <!-- BEGIN panel-body -->
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="text" name="ProductId" value="@Model.ProductId" hidden />
            <div class="panel-body">
                <div class="mt-4">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="Name" type="text" class="form-control fs-15px" id="floatingInput" placeholder="Name">
                        <label for="floatingInput" class="d-flex align-items-center fs-13px">Name</label>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="ImageUrl" type="text" class="form-control fs-15px" id="floatingInput" placeholder="ImageUrl">
                        <label for="floatingInput" class="d-flex align-items-center fs-13px">ImageUrl</label>
                    </div>
                </div>
                <!-- Create -->
                <div align="right" class="mt-3">
                    <input type="submit" class="btn btn-primary" value="Create" />
                    <a asp-controller="Admin" asp-action="ProductAdministration" class="btn btn-default active">Back</a>
                </div>
            </div>
        </form>
    </div>
    <!-- END panel -->
</div>
<!-- END col-6 -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
