@model List<ProductViewModel>
@{
    var euro = 7.53450m;
}
<!-- Carousel -->
<section class="mt-5 women-banner spad">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="filter-control">
                    <div class="section-title"><h2 style="color: darkgray">Best Offer</h2></div>
                </div>
                <div class="product-slider owl-carousel">
                    @foreach (var product in Model.OrderBy(x => Guid.NewGuid()))
                    {
                        <!-- OWL Carousel -->
                        <div class="product-item">
                            <div class="pi-pic">
                                <img src="@product.Image" alt="Product Image" />
                                @*<div class="percentage"><i class="fa-solid fa-percent"></i></div>*@

                                @if (product.Discount == true)
                                {
                                    <div class="sale">Sale</div>
                                }

                                <div class="icon">
                                    <i class="icon_heart_alt"></i>
                                </div>
                                <ul>
                                    <li class="w-icon active"><a href="#"><i class="fa-solid fa-eye"></i></a></li>
                                    <li class="quick-view"><a href="@Url.Action("ItemView", "Shop", new { id = product.Id })"><i class="fa-solid fa-cart-plus"></i> Add To Cart</a></li>
                                    <li class="w-icon active"><a href="#"><i class="fa-solid fa-heart-circle-plus"></i></a></li>
                                </ul>
                            </div>
                            <div class="pi-text">
                                <div class="catagory-name">@product.Author</div>
                                <a href="@Url.Action("ItemView", "Shop", new { id = product.Id })"><h4 style="color: darkgray">@product.Title</h4></a>

                                @if (product.Discount == true)
                                {
                                    var priceEuroDiscount = @product.DiscountPrice / euro;
                                    var priceEuro = @product.Price / euro;
                                    <div class="product-price">@product.DiscountPrice Kn &nbsp;&nbsp;<span>@product.Price Kn</span></div>
                                    <div class="product-price-euro">@priceEuroDiscount.ToString("0.00") € &nbsp;&nbsp;<span>@priceEuro.ToString("0.00") €</span></div>
                                }
                                else
                                {
                                    var priceEuro = @product.Price / euro;
                                    <div class="product-price">@product.Price Kn</div>
                                    <div class="product-price-euro">@priceEuro.ToString("0.00") €</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>